<body>
  <%- include('partials/_header') %>

  <main>
    <form class="polls-form" id="polls-form" action="/polls" method="POST">

      <div class= "poll-form-item">
        <label>Name</label>
        <textarea class="form-textarea" id="poll-form-name" name="name" placeholder="Your name"></textarea>
        <span >characters remaining</span>
        <output name="counter" class="counter" for="poll-form-text">20</output>
      </div>

      <div class= "poll-form-item">
        <label>Email*</label>
        <textarea class="form-textarea" id="poll-form-email" name="email"   placeholder="Your email"></textarea>
