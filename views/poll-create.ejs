        <output name="counter" class="counter" for="poll-form-text">20</output>
      </div>

      <div class= "poll-form-item">
        <label>Poll Title*</label>
        <textarea class="form-textarea form-needed" id="poll-form-title" name="pollTitle" placeholder="Your Question"></textarea>
        <span >characters remaining</span>
        <output name="counter" class="counter" for="poll-form-text">20</output>
      </div>

      <div class= "poll-form-item">
        <label>Final date to vote* </label>
        <input type="date" id="poll-form-date" name="description">
      </div>

      <div class="poll-form-options" id="options">
      <div class= "poll-form-item">
        <label>option*</option></option></label>
        <textarea  class="form-textarea poll-form-option" name="label"   placeholder="Option "></textarea>
        <span >characters remaining</span>
        <output name="counter" class="counter" for="poll-form-text">20</output>
      </div>

      <div class= "poll-form-item">
        <label>option description</option></option></label>
        <textarea  class="form-textarea poll-form-option-description"  name="labelDescription"   placeholder="Description"></textarea>
        <span >characters remaining</span>
        <output name="counter" class="counter" for="poll-form-text">20</output>
      </div>

      <div class= "poll-form-item">
        <label>option*</label>
        <textarea  class="form-textarea poll-form-option" name="label"   placeholder="Option"></textarea>
        <span >characters remaining</span>
        <output name="counter" class="counter" for="poll-form-text">20</output>
      </div>
      <div class= "poll-form-item">
        <label>option description</option></option></label>
        <textarea  class="form-textarea poll-form-option-description"  name="labelDescription"   placeholder="Description"></textarea>
        <span >characters remaining</span>
        <output name="counter" class="counter" for="poll-form-text">20</output>
      </div>
      <div class= "poll-form-item">
        <label>option*</label>
        <textarea  class="form-textarea poll-form-option" name="label"   placeholder="Option "></textarea>
        <span >characters remaining</span>
        <output name="counter" class="counter" for="poll-form-text">20</output>
      </div>

      <div class= "poll-form-item">
        <label>option description</option></option></label>
        <textarea  class="form-textarea poll-form-option-description"  name="labelDescription"   placeholder="Description"></textarea>
        <span >characters remaining</span>
        <output name="counter" class="counter" for="poll-form-text">20</output>
      </div>
      <p>*Required</p>

      <form class="poll-form-item" action="" method="post">
        <div class="input_fields_wrap">
          <button class="add_field_button">Add More Options</button>
        </div>
      </form>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

  </main>

</body>

